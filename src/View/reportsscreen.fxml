<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: sand; -fx-border-color: teal; -fx-border-width: 5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.reportsscreencontroller">
    <children>
        <Label fx:id="reportsLabel" layoutX="10.0" layoutY="10.0" prefWidth="140.0" text="REPORTS">
            <font>
                <Font name="Cochin" size="28.0" />
            </font>
        </Label>
        <TabPane layoutX="10.0" layoutY="100.0" prefHeight="490.0" prefWidth="682.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="apptByMonAndTypeTab" text="APPOINTMENTS BY MONTH AND TYPE">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Button fx:id="monAndTypeGenRepButton" layoutX="246.0" layoutY="186.0" mnemonicParsing="false" onAction="#onActionMonAndTypeGenRep" prefHeight="43.0" prefWidth="203.0" style="-fx-border-color: teal; -fx-border-width: 3;" text="GENERATE REPORT" textFill="#2cc348" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Button>
                                <ComboBox fx:id="monthDropDownBox" layoutX="176.0" layoutY="113.0" onAction="#onActionMonDropDownBox" prefWidth="150.0" promptText="SELECT MONTH" />
                                <ComboBox fx:id="typeDropDownBox" layoutX="452.0" layoutY="113.0" onAction="#onActionTypeDropDownBox" prefWidth="150.0" promptText="SELECT TYPE" />
                                <Label fx:id="monAndTypeCustResultLabel" layoutX="317.0" layoutY="356.0" text="____">
                                    <font>
                                        <Font name="Cochin" size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="monthLabel" layoutX="90.0" layoutY="115.0" text="MONTH:">
                                    <font>
                                        <Font name="Cochin" size="18.0" />
                                    </font></Label>
                                <Label fx:id="typeLabel" layoutX="390.0" layoutY="115.0" text="TYPE:">
                                    <font>
                                        <Font name="Cochin" size="18.0" />
                                    </font></Label>
                                <Label fx:id="monAndTypeCustApptsLabel" layoutX="176.0" layoutY="284.0" text="CUSTOMER APPOINTMENTS">
                                    <font>
                                        <Font name="Cochin" size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="contactSchedulesTab" text="CONTACT SCHEDULES">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TableView fx:id="contactSchedulesTable" layoutY="40.0" prefHeight="417.0" prefWidth="680.0">
                                    <columns>
                                        <TableColumn fx:id="apptIdColForRep" prefWidth="103.5" text="Appointment ID" />
                                        <TableColumn fx:id="titleColForRep" prefWidth="91.5" text="Title" />
                                        <TableColumn fx:id="typeColForRep" prefWidth="97.14286" text="Type" />
                                        <TableColumn fx:id="descriptColForRep" prefWidth="143.5" text="Description" />
                                        <TableColumn fx:id="startColForRep" prefWidth="79.5" text="Start" />
                                        <TableColumn fx:id="endColForRep" prefWidth="77.5" text="End" />
                                        <TableColumn fx:id="custIdColForRep" prefWidth="89.5" text="Customer ID" />
                                    </columns>
                                </TableView>
                                <Label fx:id="conSceViewReportLabel" layoutX="5.0" layoutY="10.0" text="VIEW REPORT FOR:">
                                    <font>
                                        <Font name="Cochin" size="14.0" />
                                    </font>
                                </Label>
                                <Button fx:id="conSceGenRepButton" layoutX="490.0" layoutY="7.0" mnemonicParsing="false" onAction="#onActionConSceGenRep" prefHeight="23.0" prefWidth="130.0" style="-fx-border-color: teal; -fx-border-width: 2;" text="GENERATE REPORT" textFill="#2cc384">
                                    <font>
                                        <Font name="Cochin" size="10.0" />
                                    </font>
                                </Button>
                                <ComboBox fx:id="contactDropDownBox" layoutX="147.0" layoutY="8.0" onAction="#onActionContDropDownBox" prefWidth="150.0" promptText="CONTACT LIST" />
                            </children></AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="numOfCustomersTab" text="NUMBER OF CUSTOMERS">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="459.0" prefWidth="666.0">
                            <children>
                                <Button fx:id="numOfCustGenRepButton" layoutX="251.0" layoutY="93.0" mnemonicParsing="false" onAction="#onActionNumOfCustGenRep" prefHeight="41.0" prefWidth="158.0" style="-fx-border-color: teal; -fx-border-width: 2;" text="GENERATE REPORT" textFill="#2cc348">
                                    <font>
                                        <Font name="Cochin" size="13.0" />
                                    </font>
                                </Button>
                                <Label fx:id="numOfTotCustLabel" layoutX="129.0" layoutY="172.0" text="TOTAL NUMBER OF CUSTOMERS:">
                                    <font>
                                        <Font name="Cochin" size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="numOfTotCustResultLabel" layoutX="306.0" layoutY="242.0" text="____">
                                    <font>
                                        <Font name="Cochin" size="24.0" />
                                    </font>
                                </Label>
                            </children></AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <Button fx:id="backToMainMenuButton" layoutX="500.0" layoutY="10.0" mnemonicParsing="false" onAction="#onActionGoToMainMenu" prefHeight="30.0" prefWidth="190.0" style="-fx-border-color: teal; -fx-border-width: 2;" text="BACK TO MAIN MENU">
            <font>
                <Font name="Cochin" size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>